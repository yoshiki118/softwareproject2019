<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="290dp"
            android:layout_height="500dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.494">
            <!--アカウント名-->
            <LinearLayout
                android:id="@+id/accountNameLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accountSub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/accountNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="アカウント名"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/accountNameText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_design"
                android:ems="10" />
            <!--パスワード入力-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/userPassLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="新しいパスワード"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/userPassText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz"/>
            <!--パスワード確認-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/userPassCheckLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="新しいパスワード(確認用)"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/userPassCheckText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz" />
            <!--年齢入力-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ageLabel"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="年齢"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ageText"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_design"
                    android:ems="10"
                    android:digits="0123456789" />

                <TextView
                    android:id="@+id/ageLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="歳" />

            </LinearLayout>
            <!--性別選択-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sexLabel"
                    android:layout_width="257dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="性別"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="男性"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="女性"
                        android:textSize="18sp" />

                </RadioGroup>
            </LinearLayout>
            <!--地域選択-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/areaLabel"
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="地域"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/areaspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:entries="@array/area"
                    android:spinnerMode="dialog"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="49dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <!--メールアドレス-->
                <TextView
                    android:id="@+id/mailLabel"
                    android:layout_width="336dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="メールアドレス"
                    android:textSize="18sp" />

            </LinearLayout>
            <EditText
                android:id="@+id/mailText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
        <!--登録ボタン-->

        <!--キャンセルボタン-->

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:onClick="onClick"
            android:text="登録"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:text="キャンセル"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/submitButton"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>