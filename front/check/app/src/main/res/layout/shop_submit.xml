<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="290dp"
            android:layout_height="500dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.494">
            <!--アカウント名-->
            <LinearLayout
                android:id="@+id/accountNameLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accountSub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/shopIDLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="店舗ID(ぐるなびアカウント)"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/shopIDText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPersonName"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz"/>
            <!--パスワード入力-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/shopPassLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="パスワード(8文字以上)"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/shopPassText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz"/>
            <!--パスワード確認-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/shopPassCheckLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="パスワード(確認用)"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/shopPassCheckText"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/drawable_design"
                android:ems="10"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz" />
            <!--年齢入力-->
            <!--性別選択-->
            <!--地域選択-->

        </LinearLayout>
        <!--登録ボタン-->

        <!--キャンセルボタン-->

        <Button
            android:id="@+id/shopSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="88dp"
            android:onClick="onClick"
            android:text="登録"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <Button
            android:id="@+id/shopCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="216dp"
            android:layout_marginLeft="216dp"
            android:onClick="onClick"
            android:text="キャンセル"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>